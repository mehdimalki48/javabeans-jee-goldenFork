<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="ejb-restaurant" transaction-type="JTA">
		<jta-data-source>java:/dsRestaurant</jta-data-source>
		<class>metier.entities.Menu</class>
		<class>metier.entities.Rating</class>
		<class>metier.entities.MenuType</class>
		<class>metier.entities.User</class>
		<class>metier.entities.Payment</class>
		<class>metier.entities.Customer</class>
		<class>metier.entities.Order</class>
		<class>metier.entities.OrderDetails</class>
		<class>metier.entities.SiteInfo</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>
	</persistence-unit>
</persistence>
